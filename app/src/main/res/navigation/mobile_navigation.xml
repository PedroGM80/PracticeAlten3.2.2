<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="dev.pgm.practicealten322.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_studentsAddFragment"
            app:destination="@id/studentsAddFragment" />
        <action
            android:id="@+id/action_nav_home_to_studentListActivity"
            app:destination="@id/studentListActivity" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="dev.pgm.practicealten322.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="dev.pgm.practicealten322.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/studentsAddFragment"
        android:name="dev.pgm.practicealten322.StudentsAddFragment"
        android:label="fragment_students_add"
        tools:layout="@layout/fragment_students_add" />
    <activity
        android:id="@+id/studentListActivity"
        android:name="dev.pgm.practicealten322.StudentListActivity"
        android:label="activity_student_list"
        tools:layout="@layout/activity_student_list" />
</navigation>